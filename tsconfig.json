{
	// See https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"jsx": "react",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules"
	]
}
